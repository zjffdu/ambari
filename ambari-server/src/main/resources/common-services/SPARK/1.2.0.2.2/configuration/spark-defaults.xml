<configuration supports_final="true">

  <property>
  	<name>spark.master</name>
  	<value>yarn-client</value>
  	<description>
  	The deploying mode for spark. yarn-client is the default deploying mode for spark in HDP. 
  	</description>
  </property>

  <property>
    <name>spark.yarn.queue</name>
    <value>default</value>
    <description>
      The name of the YARN queue to which the application is submitted.
    </description>
  </property>

</configuration>
